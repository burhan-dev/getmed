  <%= render 'layouts/slider'%>
  
  <% if user_signed_in? %>
    <%= link_to 'Create new Product', new_product_path %>
  <% end %>

  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @products.each do |product| %>
        <div class="col mb-5 product_card">
          <div class="card h-100">
            <!-- Product image-->
            <% if product.med_pic.attached? %>
              <%= image_tag product.med_pic.variant(resize_to_limit:[200, 200]), height: "40%" %>
            <% end %>
              <!-- Product details-->
            <div class="card-body p-4">
            <div class="text-center">
              <h5><strong>Name:</strong> <%= product.name %></h5><br>
              <p><strong>Dose:</strong> <%= product.dose %></p><br>
              <p><strong>Price:</strong> <%= product.price %></p><br>
              <p><strong>Category:</strong> <%= product.category.name %></p><br>
            <% if user_signed_in? %>
              <%= link_to 'Show', product, class:'btn btn-info' %>
              <%= link_to 'Edit', edit_product_path(product), class:'btn btn-info' %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-info' %>
            <% end %>
            </div>
            </div>
              <!-- Product actions-->
            <center><div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <%= product.category.discription %>
              <% if user_signed_in?%>
                <%= button_to "Add to cart", items_path(:product_id => product.id), class:'mt-3 btn btn-success' %>
              <% end %>
            </div></center>
          </div>
        </div>
      <% end %>
    </div>
  </div>



