
<%= form_with model: @product do |form| %>
  
          <div>
            <%= form.label :category %><br>
            <%= form.select :category_id, Category.all.map {|n| [n.name, n.id]}%>
          </div>

          <div>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
          </div>

          <div>
            <%= form.label :dose %><br>
            <%= form.text_area :dose %>
          </div>

          <div>
            <%= form.label :price %><br>
            <%= form.text_area :price %>
          </div>

          <div>
            <%= form.label :Medicine_Picture %><br>
            <%= form.file_field :med_pic %>
          </div>
          <div>
            <%= form.submit %>
          </div>
<% end %>
